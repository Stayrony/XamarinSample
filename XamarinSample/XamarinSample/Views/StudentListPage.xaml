<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinSample.Views.StudentListPage"
             Title="Students List">
  <ListView ItemsSource="{Binding StudentList}"
            SelectedItem="{Binding StudentSelect, Mode=TwoWay}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Surname}" Detail="{Binding Name}"/>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>